package com.mywebapp;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class DatabaseConnection {
    public static Connection initializeDatabase() throws SQLException, ClassNotFoundException {
        String dbDriver = "com.microsoft.sqlserver.jdbc.SQLServerDriver";
        String dbURL = "jdbc:sqlserver://localhost:1433;
        String dbName = "UserDB";
        String dbUsername = "your_db_username";
        String dbPassword = "your_db_password";

        // Enable trustServerCertificate
        String connectionOptions = ";databaseName=" + dbName + ";trustServerCertificate=true";

        Class.forName(dbDriver);
        Connection connection = DriverManager.getConnection(dbURL + connectionOptions, dbUsername, dbPassword);
        return connection;
    }
}
